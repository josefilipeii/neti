  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./"]
    },
    "moduleResolution": "Node"
  },
  "include": ["src"]
}